<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/min_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:textColor="#33ffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/sec_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sec"
        android:textColor="#33ffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="100dp"
        android:layout_marginTop="80dp"/>


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00"
        android:textColor="@color/white"
        android:fontFamily="@font/font_2dcoding_bold"
        android:textSize="70dp"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/min_down"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:background="@drawable/down_button"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp" />

    <android.widget.Button
        android:id="@+id/sec_down"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:background="@drawable/down_button"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="90dp"
        android:layout_marginTop="100dp" />

    <android.widget.Button
        android:id="@+id/min_up"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:background="@drawable/up_button"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="100dp" />

    <android.widget.Button
        android:id="@+id/sec_up"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:background="@drawable/up_button"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="100dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.widget.Button
            android:id="@+id/start_btn"
            android:text="START"
            android:textColor="@color/white"
            android:fontFamily="@font/font_2dcoding"
            android:textSize="25dp"
            android:background="@drawable/start_button"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.widget.Button
            android:id="@+id/stop_btn"
            android:text="STOP"
            android:textColor="@color/white"
            android:fontFamily="@font/font_2dcoding"
            android:textSize="25dp"
            android:background="@drawable/stop_button"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.widget.Button
            android:id="@+id/pause_btn"
            android:text="PAUSE"
            android:textColor="@color/white"
            android:fontFamily="@font/font_2dcoding"
            android:textSize="25dp"
            android:background="@drawable/pause_button"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>